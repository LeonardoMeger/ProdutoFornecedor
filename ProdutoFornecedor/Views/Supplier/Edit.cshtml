@model SupplierModel
@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div class="text-center">

    <h1 class="display-4">Editar fornecedor</h1>

</div>

<form asp-controller="Supplier" asp-action="Edit" method="post">
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do fornecedor">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="desc">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control phoneMask" placeholder="Digite o telefone do fornecedor">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-secondary" asp-controller="Supplier" asp-action="Index" role="button">Voltar</a>
</form>