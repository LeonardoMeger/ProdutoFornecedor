@model ProductModel
@{
    ViewData["Title"] = "Deletar vinculo Fornecedor Produto";
}

<div class="text-center">

    <h1 class="display-4">Deletar produto</h1>

</div>

<div class="text-center">
     <h3>Deseja realmente apagar vinculo do fornecedor com produto (@Model.Nome), (@Model.Descricao), (@Model.Preco)?</h3> 
</div>

<a class="btn btn-primary" role="button" asp-asp-controller="Product" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-asp-controller="Product" asp-action="DeleteSupplierConfirmed" asp-route-id="@Model.Id">Confirmar exclusão</a> 