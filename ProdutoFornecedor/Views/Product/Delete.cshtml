@model ProductModel
@{
    ViewData["Title"] = "Deletar Produto";
}

<div class="text-center">

    <h1 class="display-4">Deletar produto</h1>

</div>

<div class="text-center">
    <h3>Deseja realmente apagar o proudto (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary" role="button" asp-asp-controller="Product" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-asp-controller="Product" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">Confirmar exclusão</a>