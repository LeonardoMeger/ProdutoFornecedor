@model ProductModel
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="text-center">

    <h1 class="display-4">Editar produto</h1>

</div>

<form asp-controller="Product" asp-action="Edit" method="post">
    <div class="form-group">
        <label for="naem">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do proudto">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="desc">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição do proudto">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>
    <div class="form-group">
        <label for="price">Preço</label>
        <input type="text" asp-for="Preco" class="form-control" placeholder="Digite o preço do produto">
        @Html.ValidationMessageFor(x => x.Preco)
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Editar</button>
    <a class="btn btn-secondary" asp-controller="Product" asp-action="Index" role="button">Voltar</a>
</form>