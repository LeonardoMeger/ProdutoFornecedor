@model ProductModel

@{
    ViewData["Title"] = "Pagina vincular Fornecedor ao Produto";
}

<div class="text-center">

    <h1 class="display-4">Vincular fornecedor ao produto</h1>

</div>

<form asp-controller="Product" asp-action="Addsupplier" method="post">
    <div class="form-group">
        <label for="name">Nome:</label>
        <br>
        <span class="span-edit">@Model.Nome</span>
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="desc">Descrição:</label>
        <br>
        <span class="span-edit">@Model.Descricao</span>
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>
    <div class="form-group">
        <label for="price">Preço:</label>
        <br>
        <span class="span-edit">@Model.Preco</span>
        @Html.ValidationMessageFor(x => x.Preco)
    </div>
    <div class="form-group">
        <label for="idSupplier">ID do Fornecedor</label>
        <input type="text" name="idSupplier" class="form-control" placeholder="Digite o ID do produto">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Vincular</button>
    <a class="btn btn-secondary" asp-controller="Product" asp-action="Index" role="button">Voltar</a>
</form>